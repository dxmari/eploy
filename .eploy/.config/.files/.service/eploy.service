[Unit]
Description=eployservice

[Service]
ExecStart=/usr/lib/node_modules/eploy/lib/start-daemon.js
Restart=always
User=nobody
Group=nogroup
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/usr/lib/node_modules/eploy/lib

[Install]
WantedBy=multi-user.target
